<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="hospital_lab_tree_view" model="ir.ui.view">
            <field name="name">hospital.lab.tree.view</field>
            <field name="model">hospital.lab</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="test_id" />
                    <field name="patient_id" />
                    <field name="date_analysis" />
                </tree>
            </field>
        </record>



        <record id="hospital_lab_form_view" model="ir.ui.view">
            <field name="name">hospital.lab.form.view</field>
            <field name="model">hospital.lab</field>
            <field name="arch" type="xml">
                <form string="Laboratory Test">
                    <header>
                        <button name="%(action_create_lab_invoice2)d"
                            string="Create Lab Invoice" type="action"
                            class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group string="Main Info">
                            <group>
                                <field name="name" readonly="1" />
                                <field name="date_analysis" />
                                <field name="hospital_lab_physician_id" />
                                <field name="requestor_physician_id"
                                    required="1" />
                            </group>
                            <group>
                                <field name="test_id" required="1" />
                                <field name="patient_id" required="1" />
                                <field name="date_requested" />
                            </group>
                        </group>
                        <notebook>
                            <page string = "Total Cases">
                                <field name="criteria_ids" widget="section_and_note_one2many" nolabel="1">
                                    <tree editable="top" string="Test Cases">
                                        <field name="seq" />
                                        <field name="name" />
                                        <field name="result_text" />
                                        <field name="normal_range" />
                                        <field name="lab_test_unit_id" />
                                    </tree>

                                    <form string="Test Cases">

                                        <field name="name" />
                                        <field name="seq" />
                                        <field name="result_text" />
                                        <field name="lab_test_unit_id" />
                                        <field name="normal_range" />
                                    </form>
                                </field>
                            </page>
                        </notebook>

                        <group string="Extra Info">
                            <field name="results" />
                            <field name="diagnosis" />
                        </group>
                    </sheet>
                </form>

            </field>
        </record>

        <record id="action_hospital_lab_form" model="ir.actions.act_window">
            <field name="name">Lab Tests Results</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.lab</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_hospital_lab_tree" model="ir.actions.act_window">
            <field name="name">Lab Tests Results</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.lab</field>
            <field name="binding_view_types">tree</field>
            <field name="view_mode">tree</field>
        </record>

    <record id="action_view_lab_id" model="ir.actions.act_window">
        <field name="name">Lab Reports</field>
        <field name="res_model">hospital.lab</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="domain">[('patient_id', '=', active_id)]</field>
    </record>

        <menuitem name="Lab Tests Results" id="menu_lab_test_result"
            parent="kmc_hospital.main_menu_laboratory" action="action_hospital_lab_form"
            sequence="0" />

</odoo>
