<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="hospital_perinatal_tree_view" model="ir.ui.view">
            <field name="name">hospital.perinatal.tree.view</field>
            <field name="model">hospital.perinatal</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="gestational_weeks" />
                    <field name="admission_date" />
                </tree>
            </field>
        </record>

        <record id="hospital_perinatal_form_view" model="ir.ui.view">
            <field name="name">hospital.perinatal.form.view</field>
            <field name="model">hospital.perinatal</field>
            <field name="arch" type="xml">
                <form>
                    <field name="gestational_weeks" />
                    <field name="admission_date" />
                </form>
            </field>
        </record>

</odoo>
